{
  "buildTargets": ["exe", "zip"],
  "exe": {
    "inputFile": "build/main.ps1",
    "outputFile": "releases/ZeroTier-portable.exe",
    "iconFile": "build/icon.ico",
    "versionInfo": {
      "fileVersion": "0.3.7",
      "company": "LingNc",
      "product": "ZeroTier-portable",
      "description": "ZeroTier便携版启动工具",
      "copyright": "Copyright (c) 2025 LingNc",
      "trademark": "LingNc"
    },
    "options": {
      "requireAdmin": true,
      "noConsole": false,
      "supportOS": true,
      "DPIAware": true
    },
    "buildOptions": {
      "compressMethod": "zip",
      "embedMethods": {
        "compressed": ["bin/**"],
        "direct": [
          "ps/*.ps1",
          "README.md"
        ]
      }
    }
  },
  "zip": {
    "outputFile": "releases/ZeroTier-portable.zip",
    "structure": {
      "rootFolder": "ZeroTier-portable",
      "mainScript": "start.ps1"
    },
    "files": [
      "bin/**",
      "ps/*.ps1",
      "README.md",
      "LICENSE"
    ],
    "excludes": []
  }
}